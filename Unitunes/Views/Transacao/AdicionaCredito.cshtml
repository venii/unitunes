@model Unitunes.Models.ContaAcademico

@{
    ViewBag.Title = "AdicionaCredito";
}

<h2>AdicionaCredito</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ContaAcademico</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Credito, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("credito", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Credito, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Academico</label>
            <div class="col-md-10">
                @Html.DropDownList("academico", new SelectList(ViewBag.academicos, "Id", "Email", "-- Selecione --"))
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Principal", "Principal","Login")
</div>
