@model Unitunes.Models.ViewModel.MidiaViewModel

@{
    ViewBag.Title = "Criar ";
    
}



<h2>Criar</h2>

@using (Html.BeginForm("Criar", "Midia", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
