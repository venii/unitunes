                @Html.ValidationMessageFor(Model => Model.midia.Publicado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(Model => Model.midia.Preco, htmlAttributes: new { @class = "control-label col-md-2" })
